{
  "name": "server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "@lunochkin",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch './src' -e ts -x 'ts-node' src/index.ts",
    "test": "ts-node ./node_modules/.bin/tape ./test/before.ts ./src/**/*.test.ts ./test/after.ts | tap-spec",
    "createDb": "ts-node src/createDb.ts",
    "seed": "yarn task seed",
    "rpc": "ganache-cli",
    "lint": "tslint --project ./tsconfig.json ./src/**/*.ts",
    "task": "ts-node src/task.ts",
    "docker:build": "docker build -t dex-server .",
    "docker:run": "docker run --env-file=.env -e 'PSQL_HOST=host.docker.internal' -p 7001:7001 --rm -it dex-server",
    "docker:test": "yarn docker:builder && yarn docker:builder:test",
    "docker:builder": "docker build --target=builder -t dex-server-builder .",
    "docker:builder:test": "docker run -it dex-server-builder yarn test"
  },
  "dependencies": {
    "0x.js": "^2.0.4",
    "awilix": "^4.0.0",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "keythereum": "^1.0.4",
    "pg": "^7.6.1",
    "ramda": "^0.25.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "ts-node": "^7.0.1",
    "typeorm": "^0.2.9",
    "typescript": "^3.1.6",
    "web3": "^1.0.0-beta.36",
    "ws": "^6.1.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "ganache-cli": "^6.1.8",
    "nodemon": "^1.18.6",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1"
  }
}
